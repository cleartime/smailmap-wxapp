<view class='main'>
 
  <map id="55" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{scale}}" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location>
 <!-- 头部  -->
 <cover-view class='head'>
      <cover-image class='bg' src='../../images/bg.png'></cover-image>
      <cover-image class='img1' src='../../images/door.png'></cover-image>
      <cover-view class='text'>线下借款门店，列表查看</cover-view>
      <cover-image class='img2' src='../../images/go.png'></cover-image>
  </cover-view>
<!--/ 头部 -->
